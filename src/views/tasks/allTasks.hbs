<div class="row">
  {{#each tasks}}
    <div class="col-md-3">
      <div class="card text-white bg-info">
        <div class="card-header">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            {{title}}
          </h4>
        </div>
        <div class="card-body">
          <p>
            {{description}}
          </p>
        </div>
        <div class="card-footer d-flex flex-row-reverse">
          <form action="/tasks/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE" />
            <button class="btn btn-outline-danger" type="submit">
              <i class="bi bi-trash3-fill"></i>
            </button>
          </form>
          <div>
            <a href="/tasks/edit/{{_id}}" class="btn btn-outline-warning">
              <i class="bi bi-pencil-square"></i>
            </a>
          </div>
        </div>
      </div>
    </div>

  {{else}}
    <div class="d-flex justify-content-center">
      <div class="card bg-light">
        <div class="card-header">
          <h4 class="card-title">There are not tasks yet</h4>
        </div>
        <div class="card-body d-flex justify-content-center">
          <a href="/tasks/add" class="btn btn-outline-primary">Create one here!</a>
        </div>
      </div>
    </div>

  {{/each}}
</div>