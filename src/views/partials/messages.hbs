{{#if success_msg}}
  <div class="d-flex">
    <div class="alert alert-dismissible alert-success">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <strong>Good!</strong>
      {{success_msg}}
    </div>
  </div>
{{/if}}
{{#if error_msg}}
  <div class="alert alert-dismissible alert-danger">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <strong>Error!</strong>
    {{error_msg}}
  </div>
{{/if}}